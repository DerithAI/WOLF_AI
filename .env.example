# WOLF_AI Configuration
# Copy this to .env and fill in your values

# ==================== PATHS ====================
# Root directory (Windows)
WOLF_ROOT=E:/WOLF_AI

# ==================== API ====================
# API Server
WOLF_API_HOST=0.0.0.0
WOLF_API_PORT=8000

# API Key - IMPORTANT: Generate a secure key!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
WOLF_API_KEY=your-super-secret-api-key-here

# ==================== TELEGRAM ====================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram user ID (get from @userinfobot)
# Comma-separated for multiple users
TELEGRAM_ALLOWED_USERS=

# ==================== OLLAMA/WILK ====================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=dolphin-llama3:latest

# ==================== GITHUB ====================
WOLF_GITHUB_REPO=AUUU-os/WOLF_AI
WOLF_GITHUB_BRANCH=main
WOLF_AUTO_SYNC=true
